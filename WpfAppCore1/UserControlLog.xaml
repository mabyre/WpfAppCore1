<UserControl x:Class="WpfAppCore1.UserControlLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppCore1"
             mc:Ignorable="d" 
             d:DesignWidth="660" d:DesignHeight="550"
             Width="660" Height="550">
    <Grid Margin="0,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Display Log" HorizontalAlignment="Left" Margin="40,30,0,0" VerticalAlignment="Top" Click="ButtonDisplay_Click"/>
        <Button  Grid.Row="0" Content="Trace Log" HorizontalAlignment="Left" Margin="130,30,0,0" VerticalAlignment="Top" Click="ButtonTrace_Click"/>
        <TextBox Grid.Row="1" x:Name="textBoxLog" Text="Log are going to be display here" Margin="10,10,10,10"/>
    </Grid>
</UserControl>
