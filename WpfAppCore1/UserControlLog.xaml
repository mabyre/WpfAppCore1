<UserControl x:Class="WpfAppCore1.UserControlLog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppCore1"
             mc:Ignorable="d" 
             d:DesignWidth="660" d:DesignHeight="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Display Log" HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Center" Click="ButtonDisplay_Click"/>
        <Button Content="Trace Log" HorizontalAlignment="Left" Margin="130,0,0,0" VerticalAlignment="Center" Click="ButtonTrace_Click"/>
        <TextBox Grid.Row="1" x:Name="textBoxLog" Text="Log are going to be display here" Margin="40,20,40,40"/>
    </Grid>
</UserControl>
